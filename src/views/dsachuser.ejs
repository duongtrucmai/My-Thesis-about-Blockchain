<!DOCTYPE html>
<html lang="en" data-assets-path="../assets/">

<head>

    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" href="../assets/css/dsachuser.css">
    <link href="../assets/img/logo.PNG" rel="shortcut icon" type="image/vnd.microsoft.icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <meta name="viewport" content="" width=device-width, initial-scale="1.0">

</head>

<body style="height: 100vh; margin: 0;">
    <div class="container">
        <nav>
            <ul>
                <div style="color:#ffffff; font-size:20px; height:100px">
                    <li>
                        <i class="fas fa-home"></i>
                        <span class="nav-item">ADMIN</span>
                    </li>
                </div>

                <li><a href="/adduser">
                        <i class="fas fa-solid fa-user"></i>
                        <span class="nav-item">Tạo tài khoản</span>
                    </a></li>



                <li style="background-color: #06223a;"><a href="/dsachuser">
                        <i class="fas fa-info-circle"></i>
                        <span class="nav-item">Danh sách Username</span>
                    </a></li>

                <li><a href="/xoauser">
                        <i class="fas fa-trash"></i>
                        <span class="nav-item">Xóa Username</span>
                    </a></li>


            </ul>
        </nav>

        <div class="main-top">
            <form action="/logout" class="main-logout">
                <button class="fas fa-sign-out-alt">Đăng xuất</button>
            </form>
        </div>


        <div class="wrapper">
            <div style="display: flex; justify-content: center; align-items: center;">
                <table id="bangdanhsach">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Username</th>
                            <th>Trường</th>
                            <th>Hiệu trưởng</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody id="dulieu">
                        <% dataList.forEach((data, index)=> { %>
                            <tr>
                                <th>
                                    <%= index + 1 %>
                                </th>
                                <th>
                                    <%= data.username%>
                                </th>
                                <th>
                                    <%= data.truong %>
                                </th>
                                <th>
                                    <%= data.ht %>
                                </th>
                                <td>
                                    <div>
                                        <!-- dsachuser.ejs -->
<form action="/sua/<%= data.username %>" method="get">
  <input type="hidden" name="username" value="<%= data.username %>" >
  <button class="edit-btn" type="submit" style="display: flex; justify-content: center; align-items: center;">Sửa</button>
</form>
                                      </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

            </div>

        </div>
    </div>


    <script src="../assets/vendor/libs/jquery/jquery.js"></script>
    <script src="../assets/vendor/libs/popper/popper.js"></script>
    <script src="../assets/vendor/js/bootstrap.js"></script>
    <script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="../assets/vendor/js/menu.js"></script>

    <script src="../assets/js/main.js"></script>

    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body><br><br><br>

</html>